{
  "extends": "@electron-toolkit/tsconfig/tsconfig.node.json",
  "include": [
    "electron.vite.config.*",
    "src/main/**/*",
    "src/preload/**/*",
    "src/contracts/**/*",
    "tests/**/*"
  ],
  "compilerOptions": {
    "composite": true,
    "types": [
      "electron-vite/node"
    ],
    "baseUrl": ".",
    "paths": {
      "@contracts": [
        "src/contracts/index.ts"
      ],
      "@hexagon/*": [
        "src/main/hexagon/*"
      ]
    }
  }
}
